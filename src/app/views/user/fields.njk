<div class="item">

    <div>Nome Completo</div>
    <div class="input">
        <input 
          type="text" 
          name="name" 
          placeholder="Digite seu nome completo" 
          value="{{ user.name }}">
    </div>

</div>

<div class="item">

    <div>Email</div>
    <div class="input">
        <input 
          type="email" 
          name="email" 
          placeholder="Digite seu email" 
          value="{{ user.email }}">
    </div>

</div>

<div class="item">

    <div>Senha</div>
    <div class="input">
        <input 
          type="password" 
          name="password" 
          placeholder="Escolha uma senha" 
          value="{{ user.password }}">
    </div>

</div>

{% if not user.id %}
<div class="item">

    <div>Repetir Senha</div>
    <div class="input">
        <input 
          type="password" 
          name="passwordRepeat" 
          placeholder="Repita sua senha" 
        >
    </div>

</div>
{% endif %}

<div class="item">

    <div>CPF ou CNPJ</div>
    <div>
        <input 
          type="text" 
          name="cpfCnpj" 
          placeholder="Digite seu documento" 
          value="{{ user.cpfCnpj }}"
          onkeydown="Mask.apply(this, 'cpfCnpj')"
        >
    </div>

</div>

<div class="item">

    <div>CEP</div>
    <div>
        <input 
          type="text" 
          name="cep" 
          placeholder="xxxxx-xxx" 
          value="{{ user.cep }}"
          onkeydown="Mask.apply(this, 'cep')"
        >
    </div>

</div>

<div class="item">

    <div>Endereço completo</div>
    <div>
        <input 
          type="text" 
          name="address" 
          placeholder="Digite seu endeço completo" 
          value="{{ user.address }}">
    </div>

</div>