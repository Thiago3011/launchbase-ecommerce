{% extends "layout.njk" %}

{% block content %}

  <section class="password container form">
    <form method="POST"
      {% if token %}
        action="/users/password-reset?token={{token}}"
      {%else%}
        action="/users/password-reset"
      {% endif %}
    >
      <div class="header">
        <h3>Nova senha</h3>
      </div>

      <div class="fields">
        {% include 'session/reset-fields.njk' %}
      </div>

      <button class="button" type="submit">Nova senha</button>

    </form>
  </section>

{% endblock content %}